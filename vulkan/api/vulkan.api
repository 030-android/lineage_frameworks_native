    count := pAllocInfo[0].bufferCount
    cmdBuffers := pCmdBuffers[0:count]
    for i in (0 .. count) {
        cmdBuffer := ?
        cmdBuffers[i] = cmdBuffer
        State.CmdBuffers[cmdBuffer] = new!CmdBufferObject(device: device)
